<%= form_for @image, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :author, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :author, :class => 'text_field' %>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :imagetype, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :imagetype, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :local, :class => 'control-label' %>

    <div class="controls">
      <%= f.text_field :local, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fileidentifier, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fileidentifier, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :category, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :category, :class => 'text_field' %>
    </div>
  </div>

    <div class="control-group">
      <%= f.label :genre, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :genre, :class => 'text_field' %>
      </div>
    </div>

  <div class="control-group">
    <%= f.label :date_start, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date_start, :class => 'date_select' %>
    </div>
  </div>

    <div class="control-group">
      <%= f.label :date_end, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :date_end, :class => 'date_select' %>
      </div>
    </div>


    <div class="control-group">
      <%= f.label :date_txt, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :date_txt, :class => 'date_select' %>
      </div>
    </div>

  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :path_to_image, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :path_to_image, :class => 'text_field' %>
    </div>
  </div>
    <div class="control-group">
      <%= f.label :opstilling, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :opstilling, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "http://id.loc.gov/authorities/subjects/", :class => 'control-label' %>

      <div class="controls">
        <%= f.text_field :lcsh, :class => 'text_field' %>
      </div>
      <div><a target="_blank" href="http://id.loc.gov/search/?q=">Frems√∏g subject headings via id.loc.gov </a></div>
    </div>



  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                images_path, :class => 'btn' %>
  </div>
<% end %>
