  gem 'sass-rails', '~> 3.2.3'
  gem 'uglifier'
  gem 'jquery-rails'
  gem 'less'
  gem 'less-rails' #Sprockets (what Rails 3.1 uses for its asset pipeline) supports

  gem 'coffee-rails'
  gem 'twitter-bootstrap-rails'
end

